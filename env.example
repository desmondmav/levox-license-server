# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# RSA Keys (Choose one method)
# Method 1: File paths (for local development)
PRIVATE_KEY_PATH=./private_key.pem
PUBLIC_KEY_PATH=./public_key.pem

# Method 2: Base64 encoded keys (for production/Vercel)
# PRIVATE_KEY=base64-encoded-private-key-here
# PUBLIC_KEY=base64-encoded-public-key-here

# Admin Authentication
ADMIN_ISSUE_TOKEN=your-secure-admin-token-here

# JWT Configuration
JWT_ISSUER=levox-license-server
JWT_AUDIENCE=levox-cli

# Environment
NODE_ENV=development

# ========================================
# PRODUCTION DEPLOYMENT NOTES
# ========================================
# 
# For Vercel deployment:
# 1. Set NODE_ENV=production
# 2. Use PRIVATE_KEY and PUBLIC_KEY (base64 encoded)
# 3. Remove PRIVATE_KEY_PATH and PUBLIC_KEY_PATH
# 4. Ensure all environment variables are set in Vercel dashboard
#
# To generate base64 keys:
# node -e "console.log(Buffer.from(require('fs').readFileSync('private_key.pem')).toString('base64'))"
# node -e "console.log(Buffer.from(require('fs').readFileSync('public_key.pem')).toString('base64'))"
